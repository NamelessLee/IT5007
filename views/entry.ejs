<% layout('layouts/boilerplate') %>
    <style>
        #sidebarEntry {
            background-color: chocolate;
        }
    </style>
    <script src="./scripts/entry.js"></script>
    <div class="container-fluid" style="background-color: aliceblue;">
        <h1 style="text-align: center;">Campus Entry & Exit</h1>
    </div>
    <div class="container-fluid">
        <div class="row">
            <!-- left section: enter campus -->
            <div class="col-6">
                <div class="container-fluid">
                    <h4 style="text-align: center;">Entry</h4>
                </div>
                <!-- entry campus form -->
                <form class="form-control">
                    <button type="button" class="btn btn-outline-primary" onclick="quickEntry()">Now</button>
                    <span class="small text-muted">Quick fill</span>
                    <div class="mt-2">
                        <label for="date-entry">Date</label>
                        <input class="form-control" type="date" id="date-entry">
                    </div>
                    <div class="mt-2">
                        <label for="time-entry">Time</label>
                        <input type="time" class="form-control" id="time-entry">
                    </div>
                    <div class="mt-2">
                        <label for="fromWhere">From Where:</label>
                        <select class="form-control" id="fromWhere" value="1">
                            <option value="District 1">District 1</option>
                            <option value="District 2">District 2</option>
                            <option value="District 3">District 3</option>
                            <option value="District 4">District 4</option>
                        </select>
                    </div>
                    <div class="mt-2">
                        <label for="residence">Residence location</label>
                        <div class="small text-muted">Please be specific and the No. of building shall be included</div>
                        <textarea id="residence" class="form-control" cols="40" rows="2"></textarea>
                    </div>
                    <div class="mt-2">
                        <label for="route">Places you have passed while outside campus</label>
                        <textarea id="route" class="form-control" cols="40" rows="2"></textarea>
                    </div>
                    <div class="mt-3">
                        <button type="submit" onclick="entrySubmit()" class="btn btn-success form-control">Entry
                            Submit</button>
                    </div>
                </form>
            </div>
            <!-- right section: exit campus -->
            <div class="col-6 border-right">
                <div class="container-fluid">
                    <h4 style="text-align: center;">Exit</h4>
                    <!-- exit campus form -->
                    <form class="form-control">
                        <button type="button" class="btn btn-outline-primary" onclick="quickExit()">Now</button>
                        <span class="small text-muted">Quick fill</span>
                        <div class="mt-2">
                            <label for="date-exit">Date</label>
                            <input class="form-control" type="date" id="date-exit">
                        </div>
                        <div class="mt-2">
                            <label for="time-exit">Time</label>
                            <input type="time" class="form-control" id="time-exit">
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-success form-control" onclick="exitSubmit()">Exit
                                Submit</button>
                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>

