<% layout('layouts/boilerplate') %>
  <style>
    #sidebarHealthReport {
      background-color: chocolate;
    }
  </style>
  <script src="./scripts/report-health.js" ></script>
  <div class="container-fluid" style="background-color: aliceblue;">
    <h1 style="text-align: center;">Daily Health Report</h1>
  </div>
  <div class="row mt-3">
    <div class="col-4 offset-4">

      <form class="mb-3 validated-form" novalidate></form>
      <div class="mb-3">
        <h6>Please check your body temperature and enter the result.</h6>
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Body Temperature" aria-label="Recipient's username"
            aria-describedby="degree" id="temperature">
          <span class="input-group-text" id="degree">Â°C</span>
        </div>
      </div>
      <div class="mb-3">

        <h6>Are you diagnosed with COVID-19?</h6>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="covid">
          <label class="form-check-label" for="covid">
            Positive
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="noCovid" checked>
          <label class="form-check-label" for="noCovid">
            Negative
          </label>
        </div>
      </div>
      <div class="mb-3">
        <h6>Which symptoms do you have for the past few days?</h6>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="fever">
          <label class="form-check-label" for="fever">
            Fever
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="cough">
          <label class="form-check-label" for="cough">
            Cough
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="sneeze">
          <label class="form-check-label" for="sneeze">
            Sneeze
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="headache">
          <label class="form-check-label" for="headache">
            Headache
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="dizzy">
          <label class="form-check-label" for="dizzy">
            Dizzy
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="breath">
          <label class="form-check-label" for="breath">
            Short of breath
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="chest">
          <label class="form-check-label" for="chest">
            Persistent pain in the chest
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="noSymptom" checked>
          <label class="form-check-label" for="noSymptom">
            No symptom
          </label>
        </div>

      </div>
      <input type="button" value="Submit" onClick=handleHealthSubmit() class="login-button form-control btn btn-success mt-3 mb-3">
      </form>
    </div>
  </div>