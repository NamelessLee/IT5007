<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Title -->
    <title>Bootstrap和jQuery聊天窗口自动回复</title>

    <!-- Bootstrap Css -->
    <link href="assets/plugins/bootstrap-4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Chat Plugin css-->
    <link href="assets/plugins/chat/jquery.convform.css" rel="stylesheet" />

    <style>
        button {
            font-family: 'Microsoft YaHei';
        }
    </style>

</head>
<body class="">


    <div class="col-md-6">

        <div class="card" style="display:none">
            
                <div id="demo">
                    <div class="vertical-align">
                        <div class="p-0">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="no-border">
                                        
                                            <form method="GET" class="hidden">
                                                <select data-conv-question="Hi! I'm interested in your CS5002. May I book your tutor sessions?" name="first-question">
                                                    <option value="yes">Yes</option>
                                                    <option value="sure">Sorry. I'm afraid I can't.</option>
                                                </select>
                                                
                                                <select name="programmer" data-callback="storeState" data-conv-question="Can you help me with my lab? It's basically coding in Python.">
                                                    <option value="yes">Yes</option>
                                                    <option value="no">Sorry. I'm afraid I can't.</option>
                                                </select>

                                                <select name="programmer" data-callback="storeState" data-conv-question="Are you free tomorrow afternoon?">
                                                    
                                                </select>
                                                
                                            </form>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
        </div>

    </div>


    <!-- Dashboard js -->
    <script src="assets/js/vendors/jquery-3.2.1.min.js"></script>

    <!-- Chat js -->
    <script src="assets/plugins/chat/jquery.convform.js"></script>

    <script src="assets/js/chat.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/autosize.js/4.0.2/autosize.js"></script>
<script> autosize(document.querySelector('textarea'));</script>

</body>
</html>


