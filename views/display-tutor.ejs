    <script>
      function displayCourseInfo() {
        const courseDialog = document.querySelector("#courseDialog");
        courseDialog.show();
      }
      function closeSubmit() {
        const courseDialog = document.querySelector("#courseDialog");
        courseDialog.close();
      }
      // activate nav link
      (() => {
        var element = document.getElementById("navFind");
        element.classList.add("active");
      })();
    </script>
